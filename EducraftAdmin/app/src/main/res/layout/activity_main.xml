<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.itsnowball.educraftadmin.MainActivity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <TextView
            android:text="EDUCRAFT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_title"
            android:id="@+id/title_bar"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/title_bar"
            android:id="@+id/profile_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/human"
                android:layout_marginTop="16dp"
                android:id="@+id/imageView4"
                android:src="@drawable/human"
                android:layout_below="@+id/title_bar"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

            <TextView
                android:text="Jackson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_name"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_below="@+id/tv_name"
                android:id="@+id/ptLayout"
                android:layout_centerHorizontal="true">

                <TextView
                    android:text="포인트 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pointText"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#FFFFFFFF" />

                <TextView
                    android:text="1000P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_point"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="#FFcef2c2" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_below="@+id/profile_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/listView"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/listView"
            android:id="@+id/buttonLayout"
            android:layout_weight="2.2"
            android:background="@color/colorWhite">


            <Button
                android:text="환경 설정"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/set_button"
                android:textColor="#FF707070"
                android:background="@drawable/agree_bg_topbutton"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />

            <Button
                android:text="추천인 보기"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recommend_button"
                android:textColor="#FF707070"
                android:background="@drawable/agree_bg_topbutton"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
