<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itsnowball.educraftadmin.AccountSettingActivity">


    <TextView
        android:text="현재 사용중인 이메일"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_curemail"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="현재 비밀번호"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_CurEmail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_curpassword"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_CurEmail"
        android:background="@drawable/edittext_border_primary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="현재 사용중인 이메일 주소를 입력해주세요."
        android:layout_below="@+id/tv_curemail"
        android:layout_alignParentStart="true"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_CurPassword"
        android:background="@drawable/edittext_border_primary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="사용중인 이메일 주소를 입력해주세요."
        android:layout_below="@+id/tv_curpassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:password="true"
        android:textSize="14sp" />

    <TextView
        android:text="새 비밀번호 입력"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_CurPassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_newpassword"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="새 비밀번호 확인 입력"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_newpassword_confirm"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_NewPassword" />

    <TextView
        android:text="새 휴대전화 입력"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_NewPasswordConfirm"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_newphone"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/tv_newphone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/et_NewPhone"
        android:background="@drawable/edittext_border_primary"
        android:padding="10dp"
        android:hint="새 휴대전화 번호를 입력해주세요."
        android:textSize="14sp"
        android:password="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tv_newpassword_confirm"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/et_NewPasswordConfirm"
        android:background="@drawable/edittext_border_primary"
        android:padding="10dp"
        android:hint="새 비밀번호를 다시 입력해주세요."
        android:textSize="14sp"
        android:password="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/et_NewPassword"
        android:background="@drawable/edittext_border_primary"
        android:padding="10dp"
        android:layout_below="@+id/tv_newpassword"
        android:layout_alignParentStart="true"
        android:hint="새 비밀번호를 입력해주세요 ."
        android:textSize="14sp"
        android:password="true" />

    <Button
        android:text="정보 수정"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/req_button"
        android:background="@drawable/agree_bg_topbutton"
        android:layout_below="@+id/et_NewPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />
</RelativeLayout>
