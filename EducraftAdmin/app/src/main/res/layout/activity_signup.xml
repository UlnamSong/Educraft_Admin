<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itsnowball.educraftadmin.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:text="이메일(필수)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FF333333"
        android:hint="이메일을 입력해주세요."
        android:ems="10"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:id="@+id/et_email"
        android:background="@drawable/edittext_border_primary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorLink="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:textSize="14dp" />

    <TextView
        android:text="비밀번호 입력(필수)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_email"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FF333333"
        android:hint="비밀번호를 입력해주세요."
        android:ems="10"
        android:id="@+id/et_password"
        android:background="@drawable/edittext_border_primary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorLink="@color/colorPrimary"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:password="true"
        android:textSize="14dp" />

    <TextView
        android:text="비밀번호 다시 입력(필수)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_password"
        android:id="@+id/textView9" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FF333333"
        android:hint="비밀번호를 다시 입력해주세요."
        android:ems="10"
        android:id="@+id/et_password_again"
        android:background="@drawable/edittext_border_primary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorLink="@color/colorPrimary"
        android:password="true"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="14dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/et_password_again"
                android:id="@+id/layout"
                android:background="#FFAAAAAA"
                android:layout_marginBottom="20dp"
                android:layout_height="1dp">
            </LinearLayout>

            <TextView
        android:text="이름(필수)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp"
                android:layout_below="@+id/layout"
        android:id="@+id/textView10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FF333333"
        android:hint="이름을 입력해주세요."
        android:ems="10"
        android:id="@+id/et_name"
        android:background="@drawable/edittext_border_primary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorLink="@color/colorPrimary"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="14dp" />

    <TextView
        android:text="휴대전화 번호(필수)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_name"
        android:id="@+id/textView11" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text=""
        android:textColor="#FF333333"
        android:hint="휴대전화 번호를 입력해주세요."
        android:ems="10"
        android:id="@+id/et_phone"
        android:background="@drawable/edittext_border_primary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorLink="@color/colorPrimary"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="14dp" />

    <TextView
        android:text="추천인 정보(선택)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_phone"
        android:id="@+id/textView12" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF333333"
        android:hint="추천인 이메일을 입력해주세요."
        android:ems="10"
        android:id="@+id/et_recommend"
        android:background="@drawable/edittext_border_primary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorLink="@color/colorPrimary"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:inputType="textPersonName"
        android:textSize="14dp" />

            <Button
                android:text="회원 가입"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/et_recommend"
                android:id="@+id/signup_button"
                android:background="@drawable/signup_button_bg"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
