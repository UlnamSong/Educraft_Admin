<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_agreement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itsnowball.educraftadmin.AgreementActivity">

    <TextView
        android:text="환영합니다"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:id="@+id/textView7"
        android:gravity="center_horizontal" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:id="@+id/frame1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            app:srcCompat="@drawable/check_no"
            android:src="@drawable/check_no"
            android:id="@+id/imageButton_u"
            android:scaleType="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="left|center_vertical"
            android:elevation="24dp" />

        <Button
            android:text="서비스 약관동의 내용보기"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/button_u"
            android:background="@drawable/agree_bg_topbutton" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1"
        android:id="@+id/frame2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
            <Button
                android:text="개인정보 취급방침 내용보기"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/button_p"
                android:background="@drawable/agree_bg_topbutton"
                android:foregroundGravity="center"/>

            <ImageButton
                android:layout_width="50dp"
                android:background="#00000000"
                android:layout_height="50dp"
                app:srcCompat="@drawable/check_no"
                android:src="@drawable/check_no"
                android:id="@+id/imageButton_p"
                android:scaleType="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="left|center_vertical"
                android:elevation="24dp" />
    </FrameLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo_green"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView3" />

    <Button
        android:text="계속 진행합니다."
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/frame2"
        android:layout_centerHorizontal="true"
        android:id="@+id/button3"
        android:background="@drawable/signup_button_bg"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite" />

    <TextView
        android:text="에듀크래프트에 오신 것을 환영합니다.\n가입 전 약관 동의가 필요합니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
